{
  "name": "Live Hero",
  "version": "2.8",
  "description": "Rhythm game that attaches to videos.",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persist": true
  },
  "permissions": ["activeTab", "storage"],
  "optional_permissions": ["<all_urls>"],
  "icons": { 
    "128": "logo128.png"
  }
}
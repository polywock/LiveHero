{
  "name": "Live Hero",
  "version": "3.0",
  "description": "Rhythm game that attaches to videos.",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["activeTab", "storage", "scripting"],
  "optional_host_permissions": ["<all_urls>"],
  "icons": { 
    "128": "logo128.png"
  }
}